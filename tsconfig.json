{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@gent/core": ["packages/core/src/index.ts"],
      "@gent/atom-solid": ["packages/atom-solid/src/index.ts"],
      "@gent/storage": ["packages/storage/src/index.ts"],
      "@gent/tools": ["packages/tools/src/index.ts"],
      "@gent/providers": ["packages/providers/src/index.ts"],
      "@gent/runtime": ["packages/runtime/src/index.ts"],
      "@gent/server": ["packages/server/src/index.ts"],
      "@gent/sdk": ["packages/sdk/src/index.ts"],
      "@gent/test-utils": ["packages/test-utils/src/index.ts"]
    },
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": [],
  "exclude": ["node_modules"]
}
